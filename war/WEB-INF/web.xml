<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>projectmate.backend.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping> 
    
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>projectmate.backend.servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping> 
    
    <servlet>
        <servlet-name>createproject</servlet-name>
        <servlet-class>projectmate.backend.servlets.CreateProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createproject</servlet-name>
        <url-pattern>/createproject</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>createtask</servlet-name>
        <servlet-class>projectmate.backend.servlets.CreateTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createtask</servlet-name>
        <url-pattern>/createtask</url-pattern>
    </servlet-mapping>

</web-app>